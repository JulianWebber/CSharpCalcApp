@{
    ViewData["Title"] = "Calculator";
}

<style>
    .calculator {
        width: 300px;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }
    .calculator input {
        width: 100%;
        margin-bottom: 10px;
        padding: 5px;
        font-size: 18px;
    }
    .calculator .buttons {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 5px;
    }
    .calculator button {
        padding: 10px;
        font-size: 16px;
    }
    .history-buttons {
        margin-top: 10px;
    }
    #history {
        margin-top: 20px;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        max-height: 200px;
        overflow-y: auto;
    }
    #history h3 {
        margin-top: 0;
    }
    #history ul {
        list-style-type: none;
        padding-left: 0;
    }
    #history li {
        margin-bottom: 5px;
    }
</style>

<div class="text-center">
    <h1 class="display-4">Web Calculator</h1>
    <div class="calculator">
        <input type="text" id="display" readonly>
        <div class="buttons">
            <button onclick="appendToDisplay('7')">7</button>
            <button onclick="appendToDisplay('8')">8</button>
            <button onclick="appendToDisplay('9')">9</button>
            <button onclick="setOperation('+')">+</button>
            <button onclick="appendToDisplay('4')">4</button>
            <button onclick="appendToDisplay('5')">5</button>
            <button onclick="appendToDisplay('6')">6</button>
            <button onclick="setOperation('-')">-</button>
            <button onclick="appendToDisplay('1')">1</button>
            <button onclick="appendToDisplay('2')">2</button>
            <button onclick="appendToDisplay('3')">3</button>
            <button onclick="setOperation('*')">*</button>
            <button onclick="appendToDisplay('0')">0</button>
            <button onclick="appendToDisplay('.')">.</button>
            <button onclick="calculate()">=</button>
            <button onclick="setOperation('/')">/</button>
            <button onclick="setOperation('sqrt')">âˆš</button>
            <button onclick="setOperation('^')">^</button>
            <button onclick="memoryAdd()">M+</button>
            <button onclick="memoryRecall()">MR</button>
            <button onclick="memoryClear()">MC</button>
            <button onclick="clearDisplay()">C</button>
        </div>
        <div class="history-buttons">
            <button onclick="showHistory()">Show History</button>
            <button onclick="clearHistory()">Clear History</button>
        </div>
    </div>
    <div id="history" class="history"></div>
</div>

@section Scripts {
    <script>
        let currentNumber = '';
        let previousNumber = '';
        let operation = '';

        function appendToDisplay(value) {
            currentNumber += value;
            document.getElementById('display').value = currentNumber;
        }

        function setOperation(op) {
            if (currentNumber !== '') {
                previousNumber = currentNumber;
                currentNumber = '';
                operation = op;
                document.getElementById('display').value = '';
            }
        }

        function calculate() {
            if (previousNumber !== '' && currentNumber !== '') {
                $.ajax({
                    url: '/Calculator/Calculate',
                    type: 'POST',
                    data: {
                        num1: parseFloat(previousNumber),
                        num2: parseFloat(currentNumber),
                        operation: operation
                    },
                    success: function (response) {
                        if (response.success) {
                            document.getElementById('display').value = response.result;
                            currentNumber = response.result.toString();
                            previousNumber = '';
                            operation = '';
                        } else {
                            document.getElementById('display').value = 'Error: ' + response.error;
                        }
                    },
                    error: function () {
                        document.getElementById('display').value = 'Error occurred';
                    }
                });
            }
        }

        function clearDisplay() {
            currentNumber = '';
            previousNumber = '';
            operation = '';
            document.getElementById('display').value = '';
        }

        function memoryAdd() {
            if (currentNumber !== '') {
                $.ajax({
                    url: '/Calculator/Calculate',
                    type: 'POST',
                    data: {
                        num1: parseFloat(currentNumber),
                        num2: 0,
                        operation: 'M+'
                    },
                    success: function (response) {
                        if (response.success) {
                            document.getElementById('display').value = response.result;
                            currentNumber = response.result.toString();
                        } else {
                            document.getElementById('display').value = 'Error: ' + response.error;
                        }
                    },
                    error: function () {
                        document.getElementById('display').value = 'Error occurred';
                    }
                });
            }
        }

        function memoryRecall() {
            $.ajax({
                url: '/Calculator/Calculate',
                type: 'POST',
                data: {
                    num1: 0,
                    num2: 0,
                    operation: 'MR'
                },
                success: function (response) {
                    if (response.success) {
                        document.getElementById('display').value = response.result;
                        currentNumber = response.result.toString();
                    } else {
                        document.getElementById('display').value = 'Error: ' + response.error;
                    }
                },
                error: function () {
                    document.getElementById('display').value = 'Error occurred';
                }
            });
        }

        function memoryClear() {
            $.ajax({
                url: '/Calculator/Calculate',
                type: 'POST',
                data: {
                    num1: 0,
                    num2: 0,
                    operation: 'MC'
                },
                success: function (response) {
                    if (response.success) {
                        document.getElementById('display').value = '';
                        currentNumber = '';
                    } else {
                        document.getElementById('display').value = 'Error: ' + response.error;
                    }
                },
                error: function () {
                    document.getElementById('display').value = 'Error occurred';
                }
            });
        }

        function showHistory() {
            $.ajax({
                url: '/Calculator/GetHistory',
                type: 'GET',
                success: function (response) {
                    const historyDiv = document.getElementById('history');
                    historyDiv.innerHTML = '<h3>Calculation History</h3>';
                    if (response.length > 0) {
                        const historyList = document.createElement('ul');
                        response.forEach(item => {
                            const listItem = document.createElement('li');
                            listItem.textContent = item;
                            historyList.appendChild(listItem);
                        });
                        historyDiv.appendChild(historyList);
                    } else {
                        historyDiv.innerHTML += '<p>No calculations in history.</p>';
                    }
                },
                error: function () {
                    document.getElementById('history').innerHTML = 'Error occurred while fetching history';
                }
            });
        }

        function clearHistory() {
            $.ajax({
                url: '/Calculator/ClearHistory',
                type: 'POST',
                success: function (response) {
                    if (response.success) {
                        document.getElementById('history').innerHTML = '';
                    } else {
                        document.getElementById('history').innerHTML = 'Error occurred while clearing history';
                    }
                },
                error: function () {
                    document.getElementById('history').innerHTML = 'Error occurred while clearing history';
                }
            });
        }
    </script>
}
